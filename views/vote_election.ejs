<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>WeDecide</title>
  <!-- plugins:css -->
  <link rel="stylesheet" href="voters/vendors/feather/feather.css">
  <link rel="stylesheet" href="voters/vendors/ti-icons/css/themify-icons.css">
  <link rel="stylesheet" href="voters/vendors/css/vendor.bundle.base.css">
  <!-- endinject -->
  <!-- Plugin css for this page -->
  <!-- End plugin css for this page -->
  <!-- inject:css -->
  <link rel="stylesheet" href="voters/css/vertical-layout-light/style.css">
  <!-- endinject -->

</head>

<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              
              <h4></h4>
              <h6 class="font-weight-light"></h6>
              <form 
              action="/voter/vote-election"
              method="POST"
              class="pt-3">
                <div class="form-group">
                  <select name="election" class="form-control form-control-lg" id="exampleFormControlSelect2">
                    <% for( let index = 0; index < result.length; index++ ) { %>
                      <option value="<%= result[index].id + "/" + result[index].name %>"><%= result[index].name %> | Fees: N<%= result[index].price %>  </option>
                      <% } %>                    
                  </select>
                </div>
                <div class="form-group">
                  <input required name="username" type="text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Username">
                </div>
                <div class="form-group">
                  <input required name="password" type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                </div>
                                
                <div class="mt-3">
                  <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Face Check</button>
                </div>
                <div class="text-center mt-4 font-weight-light">
                  Register to vote <a href="/voter/register-election" class="text-primary">Sign Up</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
  <!-- plugins:js -->
  <script src="voters/vendors/js/vendor.bundle.base.js"></script>
  <!-- endinject -->
  <!-- Plugin js for this page -->
  <!-- End plugin js for this page -->
  <!-- inject:js -->
  <script src="voters/js/off-canvas.js"></script>
  <script src="voters/js/hoverable-collapse.js"></script>
  <script src="voters/js/template.js"></script>
  <script src="voters/js/settings.js"></script>
  <script src="voters/js/todolist.js"></script>
  <!-- endinject -->
</body>

</html>